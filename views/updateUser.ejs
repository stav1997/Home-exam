<div class="box-nav d-flex-justify-between">
  <a href="/">
    <span class="text-gradient" ><i class="fas fa-angle-double-left"></i>All users</span>
  </a>
</div>

<div class="form-title text-center">
    <h2>Lets update this user!</h2>
</div>

<form action="/api/update_user" method="GET" id="update_user">

    <div class="new_user">

        <div class="form-group">
            <label for="id" class="text-light"> ID</label>
            <input type="text" readonly="readonly" id="id" name="id" value="<%=user.id%>" pattern="[0-9]{9}" title="must enter a valid id, contains exactly 9 digits" required>
        </div>
        <div class="form-group">
            <label for="name" class="text-light"> Full Name</label>
            <input type="text" name="name" value="<%=user.name%>" pattern="^(\w\w+)\s(\w+)$" title="must enter a full name" required>
        </div>
        <div class="form-group">
            <label for="email" class="text-light"> Email</label>
            <input type="text" name="email" value="<%=user.email%>" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" title="must enter a valid email, contains only small letters, example@gmail.com" required>
        </div>
        <div class="form-group">
            <label for="last_connection" class="text-light"> Last connection</label>
            <input type="date" name="last_connection" value="<%=user.last_connection%>">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn text-dark" onclick="update_click();" >Save</button>
    </div>
</form>
<script>

    function update_click(){
        alert("User has been uploaded seccessfuly!");
    }

</script>

